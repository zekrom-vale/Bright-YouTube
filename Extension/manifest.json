{
	"manifest_version": 2,
	"name": "Bright YouTube",
	"short_name": "Brt YT",
	"version": "1.5",
	"minimum_chrome_version": "49",
	"description": "This extension automatically adjusts the brightness of YouTube videos",
	"icons":{
		"16": "img/YT16.png",
		"32": "img/YT32.png",
		"64": "img/YT64.png",
		"128": "img/YT128.png"
	},
	"browser_action": {
		"default_title": "Bright YouTube Options", 
		"default_popup": "popup/act.html"
	},
	"devtools_page": "https://github.com/zekrom-vale/Bright-YouTube/tree/Experimental",
	"homepage_url": "https://github.com/zekrom-vale/Bright-YouTube",
	"offline_enabled": true,
	"permissions": [
		"storage"
	],
	"event_rules": [{
		"event": "declarativeContent.onPageChanged",
		"actions": [{
			"type": "declarativeContent.ShowPageAction"
		}],
    "conditions": [{
			"type": "declarativeContent.PageStateMatcher",
			"css": ["video"]
		}]
	}],
	"options_ui":{
		"page": "popup/option.html"
	},
	"optional_permissions": [
		"https://www.youtube.com/watch*",
		"https://gaming.youtube.com/watch*",
		"https://gaming.youtube.com/channel/*",
		"https://www.youtube.com/embed/*",
		"https://www.youtube-nocookie.com/embed/*",
		"https://www.twitch.tv/videos/*",
		"http://www.dailymotion.com/video/*",
		"https://www.hulu.com/*",
		"https://vimeo.com/*",
		"https://www.liveleak.com/view*",
		"http://www.break.com/video/*",
		"https://www.netflix.com/",
		"https://vine.co/*",
		"https://view.yahoo.com/show/*",
		"http://www.viewster.com/serie/*",
		"*://*.tv/*",
		"https://www.vevo.com/watch/*",
		"http://www.veoh.com//*",
		"<all_urls>",
		"file://*/*"
	],
	"content_scripts": [{
		"matches": [
			"https://gaming.youtube.com/watch*",
			"https://gaming.youtube.com/channel/*",
			"https://www.youtube.com/watch*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/embed/*",
			"https://www.youtube-nocookie.com/embed/*",
			"https://www.twitch.tv/videos/*",
			"http://www.dailymotion.com/video/*",
			"https://www.hulu.com/*",
			"https://vimeo.com/*",
			"https://www.liveleak.com/view*",
			"http://www.break.com/video/*",
			"https://www.netflix.com/",
			"https://vine.co/*",
			"https://view.yahoo.com/show/*",
			"http://www.viewster.com/serie/*",
			"*://*.tv/*",
			"https://www.vevo.com/watch/*",
			"http://www.veoh.com//*",
			"<all_urls>",
			"file://*/*"
		],
		"exclude_matches": [
			"*://soundcloud.com/*",
			"*://developer.chrome.com/*",
			"*://www.w3schools.com/*",
			"*://developer.mozilla.org/*",
			"*://github.com/*",
			"*://store.steampowered.com/*",
			"*://*.io/*",
			"*://stackoverflow.com/*",
			"*://jsfiddle.net/*",
			"*://codepen.io/*",
			"*://www.paypal.com/*",
			"*://paypal.com/*",
			"*://paypalobjects.com/*"
		],
		"exclude_globs": [
			"*bank*",
			"*FBI*",
			"*edit*",
			"*minecraft*",
			"*login*",
			"*signin*",
			"*account-selection*",
			"*signup*",
			"*account*",
			"*oauth*",
			"*authorize*",
			"*oauth_token*",
			"*api*"
		],
		"css": ["main.css"],
		"js": ["controll.js"],
		"all_frames": true
	}]
}
