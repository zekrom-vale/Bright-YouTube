{
	"manifest_version": 2,
	"name": "Bright YouTube",
	"short_name": "Brt YT",
	"version": "1.4",
	"minimum_chrome_version": "49",
	"description": "This extension automaticaly ajusts the brightness of YouTube videos",
	"icons":{
		"16": "img/YT16.png",
		"32": "img/YT32.png",
		"64": "img/YT64.png",
		"128": "img/YT128.png"
	},
	"browser_action": {
		"default_title": "Bright YouTube Options", 
		"default_popup": "popup/act.html"
	},
	"devtools_page": "https://github.com/zekrom-vale/Bright-YouTube/tree/Experimental",
	"homepage_url": "https://github.com/zekrom-vale/Bright-YouTube",
	"offline_enabled": true,
	"permissions": [
		"storage"
	],
	"event_rules": [{
		"event": "declarativeContent.onPageChanged",
		"actions": [{
			"type": "declarativeContent.ShowPageAction"
		}],
    "conditions": [{
			"type": "declarativeContent.PageStateMatcher",
			"css": ["video"]
		}]
	}],
	"options_ui":{
		"page": "popup/option.html"
	},
	"optional_permissions": [
		"https://www.youtube.com/watch*",
		"https://gaming.youtube.com/watch*",
		"https://gaming.youtube.com/channel/*",
		"https://www.youtube.com/embed/*",
		"https://www.youtube-nocookie.com/embed/*",
		"https://www.twitch.tv/videos/*",
		"<all_urls>"
	],
	"content_scripts": [{
		"matches": [
			"https://gaming.youtube.com/watch*",
			"https://gaming.youtube.com/channel/*",
			"https://www.youtube.com/watch*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/embed/*",
			"https://www.youtube-nocookie.com/embed/*",
			"https://www.twitch.tv/videos/*",
			"<all_urls>"
		],
		"exclude_matches": [
			"https://soundcloud.com/*",
			"https://developer.chrome.com/*",
			"https://www.w3schools.com/*",
			"https://www.facebook.com/*",
			"https://twitter.com/*",
			"https://mobile.twitter.com/*",
			"https://developer.mozilla.org/*",
			"https://github.com/*",
			"*://store.steampowered.com/*",
			"*://*.io/*",
			"https://stackoverflow.com/*",
			"https://jsfiddle.net/*",
			"https://codepen.io/*",
			"https://www.flickr.com/*",
			"https://www.instagram.com/*",
			"https://www.paypal.com/*",
			"https://paypal.com/*",
			"https://paypalobjects.com/*"
		],
		"exclude_globs": [
			"bank",
			"FBI",
			"edit",
			"minecraft",
			"login",
			"signin",
			"account-selection",
			"signup",
			"account",
			"oauth",
			"authorize",
			"oauth_token",
			"api"
		],
		"css": ["main.css"],
		"js": ["controll.js"],
        "all_frames": true
	}]
}
