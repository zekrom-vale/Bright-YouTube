{
	"manifest_version": 2,
	"name": "Bright YouTube",
	"version": "1.0",
	"description": "This extension automaticaly ajusts the brightness of YouTube videos",
	"browser_action": {
		"icons":{
			"16": "img/YT16.png",
			"32": "img/YT32.png",
			"64": "img/YT64.png",
			"128": "img/YT128.png"
		},
		"default_title": "Enable/Disable", 
		"default_popup": "popup/act.html"
	},
	"permissions": [
		"https://www.youtube.com/watch*",
		"https://www.youtube.com/channel/*",
		"https://www.youtube.com/embed/*",
		"https://www.youtube-nocookie.com/embed/*",
		"storage"
	],
	"optional_permissions": [
		"https://www.youtube.com/channel/*",
		"https://www.youtube.com/embed/*",
		"https://www.youtube-nocookie.com/embed/*"
	],
	"content_scripts": [{
		"matches": [
			"https://www.youtube.com/watch*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/embed/*",
			"https://www.youtube-nocookie.com/embed/*"
		],
		"css": ["main.css"],
		"js": ["controll.js", "popup/page.js"],
        "all_frames": true
	}]
}
